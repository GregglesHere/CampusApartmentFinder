    <style>
        html,
        body {
            height: 100%;
            position: relative;
            overflow-x: scroll;
            overflow-y: scroll;
        }

        body {
            margin: 0;
            background: linear-gradient(45deg, #49a09d, #5f2c82);
            font-family: sans-serif;
            font-weight: 100;
        }

        .title {
            text-align: center;
            font-size: 40px;
        }

        input[type=submit] {
            display: inline-block;
            border-radius: 4px;
            background-color: #14c9cb;
            border: none;
            color: #FFFFFF;
            text-align: center;
            font-size: 16px;
            padding: 0px;
            height: 35px;
            width: 100px;
            transition: all 0.5s;
            cursor: pointer;
            margin: 0px;
            position: absolute;
        }

        input[type=text] {
            text-align: center;
            height: 30px;
            border: 1px solid grey;
            border-radius: 4px;
            background-color: white;
            color: black;
        }

        .add_input {
            display: inline-block;
            border-radius: 4px;
            background-color: #14c9cb;
            border: none;
            color: #FFFFFF;
            text-align: center;
            font-size: 16px;
            padding: 0px;
            height: 35px;
            width: 200px;
            transition: all 0.5s;
            cursor: pointer;
            margin: 5px;
            position: absolute;
            left: 45%;
        }
        
        .survey_input {
            display: inline-block;
            border-radius: 4px;
            background-color: #14c9cb;
            border: none;
            color: #FFFFFF;
            text-align: center;
            font-size: 16px;
            padding: 0px;
            height: 35px;
            width: 200px;
            transition: all 0.5s;
            cursor: pointer;
            margin: 5px;
            position: absolute;
            left: 45%;
        }

        .search_input {
            position: absolute;
            left: 42%;
        }

        .container {
            height: 100%;
            position: relative;
            top: 20%;
            left: 22%;
            font-size: 15px;
            overflow-x: scroll;
            overflow-y: scroll;
        }

        table {
            height: 100%;
            width: 800px;
            border-collapse: collapse;
            position: relative;
            overflow-x: scroll;
            overflow-y: scroll;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            page-break-inside: auto;
        }

        th,
        td {
            padding: 15px;
            background-color: rgba(255,255,255,0.2);
            color: #fff;
        }

        th {
            text-align: left;
        }

        thead th {
            background-color: #55608f;
        }

        table tr:hover {
            background-color: rgba(255,255,255,0.3);
        }


        tbody td {
            position: relative;		
        }

