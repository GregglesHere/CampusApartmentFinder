<!DOCTYPE html>
<html>
<body>
    
     <br><br><br><br>
            <h1 class="title">Search Distance Results</h1>
        <br><br>

        <div class="container">
    <label for="first">Apartments ranked by the most landmark distances in common.</label> 
    <br><br>
    <label for="first"><%= table[1].Apartment %></label> 
            <br><br>
<div class="table-wrapper">
        <% if (table.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col"> </th>
                        <th scope="col">Apartment</th>
                        <th scope="col">Location</th>
                        <th scope="col">Rank</th>
                    </tr>
                </thead>
                <tbody>
                    <% table[0].forEach((apt, index) => { %>
                            <tr>
                                <th scope="row">
                                <th><%= apt.Apartment %></th>
                                <td><%= apt.Location %></td>
                                <td><%= apt.num %></td>
                            </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No units found. Go <a href="/add" >here</a> to add buildings.</p>
        <% } %>
    </div>
</div>
</body>
